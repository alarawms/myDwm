#!/bin/sh

# activate dual screen
disper -e -t bottom &

# dwm status bar
slstatus -d

# screen brightness
sudo pkexec xfpm-power-backlight-helper --set-brightness 40

# deactivate screen blanking
xset s off
xset s 0 0
xset s noblank
xset -dpms

# french keyboard
setxkbmap fr &

# numlock on
numlockx &

# utilities
xsettingsd &
blueman-applet &
dropbox start &
wicd-client -t &
sudo update-notifier --force &
xfce4-power-manager &

# x resources
xrdb -load ~/.Xresources

# background
feh --bg-scale /home/hamdouni/Dropbox/public/si-wallpaper.png

# trackpad less sensitive
synclient MaxTapTime=0 PalmDetect=1

exec dbus-launch dwm-loop 2> ~/.xsession-errors
