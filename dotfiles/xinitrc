#!/bin/sh

# activate dual screen, disposition and brightness depends on hostname
computer=$(hostname)
disposition="bottom"                # default
brightness="40"                     # default
case $computer in
    xps15) disposition="left"  
           brightness="400" ;;
    xps13) disposition="bottom"
           brightness="40"  ;;
esac
# disposition
disper -e -t $disposition &
# screen brightness
sudo pkexec xfpm-power-backlight-helper --set-brightness $brightness 
# dwm status bar
slstatus -d
# deactivate screen blanking
xset s off
xset s 0 0
xset s noblank
xset -dpms
# french keyboard
setxkbmap fr &
# numlock on
numlockx &
# utilities
xsettingsd &
blueman-applet &
dropbox start &
wicd-client -t &
sudo update-notifier --force &
xfce4-power-manager &
# x resources
xrdb -load ~/.Xresources
# background
feh --bg-scale /home/hamdouni/Dropbox/public/si-wallpaper.png
# trackpad less sensitive
synclient MaxTapTime=0 PalmDetect=1
# launch dwm
exec dbus-launch dwm-loop 2> ~/.xsession-errors
