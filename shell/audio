#!/bin/sh

# Simple audio control
# --------------------
#
# Uses amixer and mocp.
#
# "+" to raise up
# "-" to down
# "m" to mute/unmute
# "P" to play/pause music
# "n" next music
# "p" previous music
# "i" info song played
# default shows actual volume

# get volume 
VOL=$(amixer get Master | awk '/Mono.+/ {print $6=="[off]"?$6:$4}' | tr -d '[]')

case "$1" in
        +)
            /usr/bin/amixer sset 'Master' 5%+
        ;;
        -)
            /usr/bin/amixer sset 'Master' 5%-
        ;;
        m)
            /usr/bin/amixer -D pulse sset Master toggle
        ;;
        g)
            # Play music. If server off, run it
            if mocp -i ; then 
                mocp -G
            else 
                mocp -S
                mocp -p
            fi
        ;;
        n)
            # next
            mocp -f
        ;;
        p)
            # previous
            mocp -r
        ;;
        i)
            # info on played song
            mocp -Q '%song'
        ;;
        *)
            echo "$VOL"
esac
